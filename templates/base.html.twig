<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
</head>
{{ include('base-nav-bar.html.twig') }}

<body class="bg-light">
    <main role="main" class="container" style="width: 560px">
        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h6 class="border-bottom border-gray pb-2 mb-0">{% block viewName %}{% endblock %}</h6>

            {% block body %}
            {% endblock %}
        </div>
    </main>
</body>

{% block stylesheets %}
    {# 'app' must match the first argument to addEntry() in webpack.config.js #}
    {{ encore_entry_link_tags('app') }}

    <!-- Renders a link tag (if your module requires any CSS)
    <link rel="stylesheet" href="/build/app.css"> -->
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('javascripts/Vehicles/vehicles-form.js') }}" defer></script>


    <!-- Renders app.js & a webpack runtime.js file
    <script src="/build/runtime.js" defer></script>
    <script src="/build/app.js" defer></script>
    See note below about the "defer" attribute -->
{% endblock %}
</html>